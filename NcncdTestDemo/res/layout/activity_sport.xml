<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.miao.ncncd.demo.vm.HealthActivity">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@android:color/white">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_20"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/src_title_close"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_100"
            android:layout_marginRight="@dimen/dimen_100"
            android:gravity="center"
            android:text="上传运动数据"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_20"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/dimen_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="步数:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/et_step"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/shape_edit_bkg_normal"
                android:inputType="number"
                android:padding="@dimen/dimen_5"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="距离（m）:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/et_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/shape_edit_bkg_normal"
                android:inputType="number"
                android:padding="@dimen/dimen_5"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_100"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="收集时间间隔（s）:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                />

            <EditText
                android:id="@+id/et_interval_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:background="@drawable/shape_edit_bkg_normal"
                android:inputType="number"
                android:padding="@dimen/dimen_5"
                android:text="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="加入"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"
                />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:text="上传"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"/>

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:text="重置"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_15"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/shape_edit_bkg_normal"
            android:scrollbars="vertical"/>
    </LinearLayout>

</LinearLayout>
